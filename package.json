      "sh -c 'tsc --noEmit'",
      "vitest related --run"
    ]
  },
  "prettier": "@ubermanu/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.0.15",
    "@ubermanu/prettier-config": "^3.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
