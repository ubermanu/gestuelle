{
  "name": "gestuelle",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Emmanuel Vodor <emmanuel.vodor@proton.me>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/gestuelle.js",
      "types": "./dist/gestuelle.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "format": "prettier -w .",
    "prepare": "husky",
    "test": "vitest --run"
